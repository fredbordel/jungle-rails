<h1>Login</h1>

<%= form_tag '/login' do %>

  <div> Email: <%= text_field_tag :email %> </div>
  <div> Password: <%= password_field_tag :password %> </div>
  <div> <%= submit_tag "Submit" %> </div>
  
  <% flash.each do |type, msg| %>
    <div class="alert alert-danger" role="alert">
      <%= msg %>
    </div>
  <% end %>

<% end %>